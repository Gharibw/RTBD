<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ViewWC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hbaseapp.MainActivity$PlaceholderFragment" >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_centerHorizontal="true"
           android:orientation="vertical" >

           <Button
               android:id="@+id/RunWC"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Run WordCount Jar"
               />

           <Button
               android:id="@+id/ViewWC"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="View WordCount Result" />

           <Button
               android:id="@+id/Create"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Hbase Create" />

           <Button
               android:id="@+id/Insert"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Hbase Insert" />

        <Button
            android:id="@+id/Retrieve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hbase Retrieve" />

        <Button
            android:id="@+id/Delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hbase Delete" />

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</RelativeLayout>
